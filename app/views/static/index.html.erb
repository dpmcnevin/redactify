<div id="welcome" class="static_page">
  <% if logged_in? %>
  <p>
    Add new spoiler tag <%= render "timeline/form", :user => current_user %> or <%= link_to "go to my timeline", timeline_path %>
  </p>
	
	<p>
		<%= render "spoilers/popular", :user => current_user %>
	</p>
  <% end %>

  <% if @users.any? %>
		<div id="recent_users">
	    <h2>Recently Joined</h2>
	    <% for user in @users %>
	      <%= link_to profile_image(user), twitter_profile_url(user) %>
	    <% end %>
		</div>
  <% end %>
</div>
