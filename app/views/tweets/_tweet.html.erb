<div id="<%= "tweet_#{tweet.id}" %>" class="tweet">
  <span class="user_info">
    <%= link_to image_tag(tweet.profile_image_url, :size => "50x50"), "http://twitter.com/#{tweet.screen_name}" %>
  </span>
  
  <span class="tweet_text">
    <%= image_tag("lock.png") if tweet.protected? %>
    <%= link_to tweet.screen_name, "http://twitter.com/#{tweet.screen_name}"%>
    <%= auto_link_twitter(auto_link(tweet.text, :link => :urls, :html => { :target => '_blank'} )) %><br />
    <small><%= tweet.created_at %> using <%= tweet.source %></small>
  </span>
</div>