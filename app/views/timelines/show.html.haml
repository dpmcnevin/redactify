%table
  %tbody
    %tr
      %td#timeline
        = render "timelines/post_tweet"
        = link_to "update", @update_tweets_url, :remote => true, :method => :put if @update_tweets_url && RAILS_ENV == "development"
        #updated_tweets
        = render "timelines/tweets"
        / = javascript_tag "load_new_tweets('#{@update_tweets_url}')"
      %td#side
        %div.side_content
          %h3 Add New Spoiler Tag
          = render "timelines/form", :user => @user
          
          #spoiler_tags.side_content
            = render "spoilers/user", :user => @user
          
          #user.side_content
            %h3 User
            %ul
              %li= link_to "@#{current_user.login}", timeline_path
              %li= link_to "Mentions", mentions_users_path
              %li= link_to "Retweeted by me"
              %li= link_to "Retweets of me", retweets_of_me_users_path

          #lists.side_content
            %h3 Lists
            %ul
              - for list in @user.get_lists
                %li= link_to list["full_name"], list_path(list["id"])
          
          %hr
          
          #twitter_search.side_content
            %h3 Search Twitter
            = render "searches/form"
          
          / #twitter_trends.side_content
          /   = render "users/trends"
    
          #rate_limit.side_content
            = render "users/rate_limit", :rate_limit => @user.rate_limit_status

