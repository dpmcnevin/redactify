<div id="post_tweet">
	<%= form_for :tweet, :url => timeline_path, :html => { :id => "new_tweet_form" } do |f| %>
		<%= f.hidden_field :in_reply_to_status_id %>
		<%= f.text_area :status, :id => :new_tweet %>
		<span id="remaining_characters">140</span>
		<%= f.submit "Post to Twitter" %>
	<% end %>
	<div id="post_tweet_loading" class="loading" style="display: none;">
    <%= image_tag "ajax-loader.gif" %>
    Sending update to Twitter
  </div>
  <div id="new_tweets_loading" class="loading" style="display: none;">
    <%= image_tag "ajax-loader.gif" %>
    Loading New Tweets
  </div>
</div>